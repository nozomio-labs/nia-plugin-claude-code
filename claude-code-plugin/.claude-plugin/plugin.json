{
  "name": "nia",
  "version": "1.0.0",
  "description": "Nia - the up-to-date knowledge API for AI agents. Index repos, search codebases, perform AI research, and share context across agents.",
  "author": {
    "name": "Nozomio Labs",
    "email": "founders@nozomio.com",
    "url": "https://trynia.ai"
  },
  "license": "AGPL-3.0",
  "homepage": "https://trynia.ai",
  "repository": "https://github.com/nozomio-labs/nia-claude-code-plugin",
  "keywords": ["nia", "knowledge", "search", "indexing", "research", "mcp"],

  "mcpServers": {
    "nia": {
      "type": "http",
